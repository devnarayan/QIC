@model QIC.Areas.Admin.Models.ContentModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-horizontal">
    <h4>Update Content</h4>
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.LanguageID, "LanguageID", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("LanguageID", "Select")
            @Html.ValidationMessageFor(model => model.LanguageID)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.WebPageID, "LanguageID", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(dm=>dm.WebPageList,new SelectList(Model.WebPageList,"Value","Text"))
            @Html.ValidationMessageFor(model => model.WebPageID)
        </div>
    </div>
</div>