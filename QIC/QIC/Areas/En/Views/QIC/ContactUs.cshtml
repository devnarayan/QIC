@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-ng-controller="ContentController" data-ng-init="GetContentListByID()">
    <input type="hidden" id="hdnfld" value="13" />
    <section class="row" id="pageCover">
        <img class="pageCover" alt="" src="~/images/contactCover.png">
        <div class="row pageTitle">Contact us</div>
        <div class="row pageBreadcrumbs">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index","QIC", new { area = "En" })">home</a></li>
                <li class="active">contact us</li>
            </ol>
        </div>
    </section>
    <section id="contacts" class="row">
        <div class="container">
            <div class="row">
                <div class="row m0">
                    <div class="col-sm-6">
                        <div class="row m0">
                            <h3 data-ng-bind-html="ContentList[1].LangContent">@*Get in touch!*@</h3>
                            <p data-ng-bind-html="ContentList[2].LangContent">@*This is Photoshop's version  of Lorem Ipsum. Proin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, lorem quis bibendum auctor <br><br>Morbi accumsan ipsum velit. Nam nec tellus a odio tincidunt auctor a ornare odio. Sed non  mauris vitae erat consequat auctor eu in elit.*@</p>
                            <ul class="list-inline">
                                <li><i class="fa fa-home" data-ng-bind-html="ContentList[3].LangContent"></i>@*92690 Riyadh 11663*@</li>
                                <li><i class="fa fa-phone" data-ng-bind-html="ContentList[4].LangContent"></i> @*+966 11 47 43 177*@ </li>
                                <li><i class="fa fa-envelope" data-ng-bind-html="ContentList[5].LangContent"></i> @*info@qic-sa.com*@ </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row m0 commentForm">
                            <form class="row m0" id="contactForm" method="post" name="contact" action="@Url.Action("ContactUS","QIC",new{area="En"})" @*action="http://premiumlayers.com/demos/construction/contact_process.php"*@>
                                <label>@ViewBag.Msg</label>
                                <div class="col-sm-6 p0 commenterInfoInputs">

                                    <div class="row m0">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input type="text" class="form-control" name="name" id="name" placeholder="Name">
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                            <input type="email" class="form-control" name="email" id="email" placeholder="E-mail">
                                        </div>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-link"></i></span>
                                            <input type="url" name="url" id="url" class="form-control" placeholder="Website">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6 p0">
                                    <div class="row m0">
                                        <div class="input-group">
                                            <textarea placeholder="Message" name="message" id="message" class="form-control"></textarea>
                                        </div>
                                        <button class="btn btn-default" type="submit" data-ng-bind-html="ContentList[6].LangContent">@*send message*@</button>
                                    </div>
                                </div>
                            </form>
                            <div id="success">
                                <span class="green textcenter">
                                    <p data-ng-bind-html="ContentList[8].LangContent">@*Your message was sent successfully! I will be in touch as soon as I can.*@</p>
                                </span>
                            </div>
                            <div id="error">
                                <span>
                                    <p data-ng-bind-html="ContentList[9].LangContent">@*Something went wrong, try refreshing and submitting the form again.*@</p>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row m0">
                    <h3 data-ng-bind-html="ContentList[7].LangContent">@*Find us on Google Map*@</h3>
                    <div id="mapBox"></div>
                </div>
            </div>
        </div>
    </section>
</div>@section FooterScript{
    <script src="~/AgController/ContentJS.js"></script>
}

<!--jQuery, Bootstrap and other vendor JS-->
<script src="js/jquery-2.1.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        //Check to see if the window is top if not then display button
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('.scrollToTop').fadeIn();
            } else {
                $('.scrollToTop').fadeOut();
            }
        });

        //Click event to scroll to top
        $('.scrollToTop').click(function () {
            $('html, body').animate({ scrollTop: 0 }, 800);
            return false;
        });

    });

</script>


<script src="https://maps.googleapis.com/maps/api/js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/jquery.form.js"></script>
<script src="js/jquery.validate.min.js"></script>
<script src="vendors/nicescroll/jquery.nicescroll.js"></script>
